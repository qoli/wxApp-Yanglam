  padding-left: @paddingUnit;
  padding-right: @paddingUnit;
  font-size: @fontUnit;
  margin-top: @paddingUnit;
  margin-bottom: @paddingUnit;
  align-items: baseline;
  .text {
    font-size: @fontUnit*0.9;
    margin-right: 0.5rem;
    font-weight: @weightLight;
  }
  .number {
    font-size: @fontUnit*1.2;
